<div class="container">
    <div class="jumbotron jumbotron-fluid text-center d-flex flex-column justify-content-end pb-0">
        <div class="container mb-0 p-0">
            <p class="lead m-0" style="color:antiquewhite; background:rgb(30, 32, 32);">Tech News From NPR</p>
        </div>
    </div>
</div>

<div class="container">
  <h3>Saved Articles</h3>
  {{#each articles}}
    <div class="card bg-light mb-3">
      <div class="card-body">
        <h5 class="card-title border-bottom border-info">{{title}}</h5>
        <a href="{{link}}" class="card-link" target="_blank">View This Article on NPR</a>
        <p class="card-text">{{summary}}...</p>
        <a data-articleId= {{_id}} class="btn btn-primary unsave-btn float-right">Remove</a>
        <a data-articleId= {{_id}} class="btn btn-primary comment-modal-btn float-right mr-2" data-toggle="modal">Comments</a>
      </div>
    </div>
  {{/each}}
</div>

<footer class="footer">
  <div class="container">
    <div class="content has-text-centered">
      <p>
        <strong>NPR Tech News Scraper</strong> by <a href="https://github.com/Francescapuche">Francesca Puche</a>
      </p>
    </div>
  </div>
</footer>

<div id="add-comment-modal" class="modal" tabindex="-1" role="dialog" data-articleId="">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 id="comment-modal-title" class="modal-title"></h5>
      </div>
      <div class="modal-body container">
        <ul class="comments-list">
        </ul>
        <div class="form-group">
          <label for="comment-area">Add comment</label>
          <textarea name="new-comment-area" class="form-control" id="comment-body" rows="2" required></textarea>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary comment-save-btn" data-dismiss="modal">Save</button>

        </div>
      </div>
    </div>
  </div>

  
